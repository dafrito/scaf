#!/bin/bash
PATH=/bin:/usr/bin

die() {
    echo $* >&2
    exit 1;
}

realname() {
    if [ -n "$OWNER" ]; then
        echo $OWNER
    else
        # Extract a name from the passwd file
        grep "^`whoami`" /etc/passwd | cut -d: -f5
    fi;
}

if [ $# = 0 ]; then
    set LICENSE
fi;

for f in $*; do
    mkdir -p `dirname $f`
    if [ -e $f ]; then
        echo "$f already exists, skipping."
    else
        cp $SCAFDATA/MIT.license $f
        sed -i -re "s/@YEAR@/`date +%Y`/g" \
            -e "s:@OWNER@:`realname`:g" \
            $f;
    fi;
done;

# vim: set ts=4 sw=4 et :
